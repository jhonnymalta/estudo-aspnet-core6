
@model IEnumerable<TipoConta> 
@{
    ViewData["Title"] = "Todos tipos de contas";

}
<h1>Tipos de Contas</h1>
<h5>O tipo de conta se refere a como podemos agrumar nossas contas.</h5>
<a asp-action="Criar" class="btn btn-primary mb-3 ">Criar Nova</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Ação</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var tipoConta in Model)
        {
            <tr>
                
                <td>
                     @tipoConta.Nome
                </td>
                <td>
                   <a class="btn btn-primary">Editar</a>
                   <a class="btn btn-danger">Apagar</a>
                </td>

            </tr>

        }

    </tbody>
</table>



